{
	"manifest_version": 3,
	"name": "MediaWikiDebugJS",
	"description": "Injects JS for debugging purposes for MediaWiki Wiki Farms",
	"author": "Universal Omega",
	"version": "1.6.0",
	"icons": {
		"512": "images/icon-512.png"
	},
	"action": {
		"default_icon": "images/icon-128.png",
		"default_title": "MediaWikiDebugJS",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [ "<all_urls>" ],
			"js": [ "content_script.js" ]
		}
	],
	"permissions": [
		"activeTab",
		"scripting",
		"tabs",
		"webNavigation"
	],
	"host_permissions": [ "<all_urls>" ],
	"browser_specific_settings": {
		"gecko": {
			"id": "mediawikidebugjs@wikitide.org",
			"strict_min_version": "115.0",
			"update_url": "https://raw.githubusercontent.com/miraheze/MediaWikiDebugJS/refs/heads/main/update.json"
		}
	}
}
